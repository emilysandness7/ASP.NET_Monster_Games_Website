@model MonsterGames.Models.Leaderboard

@{
  ViewBag.Title = "Delete All Lb Scores";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Scores for all Leaderboards</h2>

@using (Html.BeginForm("DelLbAllScoresSelect", "ManageLb", FormMethod.Post))
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <h4>Delete All Leaderboards</h4>
    <hr />

    <div class="form-group">
      <p><b>Warning!</b> Once you press delete all scores for all leaderboards will be deleted.</p>
      <p>Every single leaderboard entry on this website will be erased, think carefully before you hit that button.</p>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Delete Everything" class="btn btn-default" />
      </div>
    </div>
  </div>
}

<div>
  @Html.ActionLink("Back to Admin Controls Page", "Index")
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}