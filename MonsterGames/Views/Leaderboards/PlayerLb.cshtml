@model IEnumerable<MonsterGames.Models.Leaderboard>
@using MonsterGames.Models
@{
  ViewBag.Title = "My Leaderboards";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Leaderboards</h2>
<hr />

<div class="row">
  <div class="col-md-6">
    <h3>Monster Wants Candy Scores</h3>
    <table class="table">
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.ScoreDate)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Score)
        </th>
      </tr>

      @foreach (var item in Model.Where(x => x.GameName.Equals(ApplicationConstants.GAME_MWC)))
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.ScoreDate)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Score)
          </td>
        </tr>
      }
    </table>
  </div>

  <div class="col-md-6">
    <h3>Solo Pong Scores</h3>
    <table class="table">
      <tr>
        <th>
          @Html.DisplayNameFor(model => model.ScoreDate)
        </th>
        <th>
          @Html.DisplayNameFor(model => model.Score)
        </th>
      </tr>

      @foreach (var item in Model.Where(x => x.GameName.Equals(ApplicationConstants.GAME_SP)))
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.ScoreDate)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Score)
          </td>
        </tr>
      }
    </table>
  </div>
</div>
<p>
  @Html.ActionLink("Back to Manage Account Page", "Index", "Manage")
</p>

